<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainBackground"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="#000000"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".catalogoFilmes">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="732dp"
        android:background="#000000"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/topmain"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="#000000"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="40dp"
                android:layout_height="43dp"
                android:layout_gravity="right"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@android:drawable/ic_menu_sort_by_size"
                android:paddingTop="15dp"
                android:textColor="#CFCFCF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:gravity="center_horizontal"
                android:text="UNIFLIX"
                android:textColor="#FF0000"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <SearchView
                android:id="@+id/btnSearch"
                android:layout_width="51dp"
                android:layout_height="47dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="100dp"
                android:layout_marginTop="15dp"
                android:gravity="left"
                android:paddingTop="10dp"
                android:visibility="visible"
                tools:visibility="visible">

            </SearchView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:background="#000000"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dramas:"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/movieList"
                android:layout_width="434dp"
                android:layout_height="184dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/image"
                tools:layout_editor_absoluteX="-13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recomendados:"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:layout_conversion_absoluteHeight="19dp"
                tools:layout_conversion_absoluteWidth="409dp" />

            <ImageView
                android:id="@+id/movieList2"
                android:layout_width="412dp"
                android:layout_height="182dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/image__1_" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Romances:"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#000000"
                android:textColorHint="#000000"
                android:textColorLink="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/movieList3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/image__2_" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>